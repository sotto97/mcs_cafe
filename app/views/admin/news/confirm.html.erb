<div class="container" style="text-align: center;">
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2" style="position: relative; height: 80vh;">

			<h2>ニュース新規投稿内容確認</h2>
			<div class="news-confirm">
				<div class="row">
					<%= form_with(model: @news_new, local: true, url: admin_news_index_path, method: :post) do |f| %>
						<%= f.hidden_field :admin_id %>

						<div class="news-form">
						<h5><strong>新規ニュースタイトル</strong></h5>
							<%= f.hidden_field :title %>
							<%= "#{@news_new.title}" %>
						</div>

						<div class="news-form">
						<h5><strong>新規ニュース内容</strong></h5>
							<%= f.hidden_field :body %>
							<%= "#{@news_new.body}" %>
						</div>

						<div class="actions">
							<!-- 'back'というactionをNews:controllerに追加 -->
							<%= f.submit :入力画面に戻る, name: 'back', class:"btn news" %>
							<%= f.submit :投稿する, class:"btn create-news" %>
						</div>

					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	.news-confirm{
	  position: absolute;
	  top: 50%;
	  left: 50%;
	  -webkit-transform : translate(-50%,-50%);
	  transform : translate(-50%,-50%);
	  width: 100%;
	  text-align: center;
	}

	.news-confirm .news-form{
		margin: 30px 0;
	}

	.news-confirm .create-news{
		width: auto;
		height: auto;
		background-size: 200%;
		text-align: center;
		line-height: 200%;
		border-radius: 5px;
		font-size: 15px;
		outline: none;
		border: none;
		background-color: #333;
		cursor: pointer;
		text-decoration: none;
		color: #fff;
	}

	.news-confirm .news{
		width: auto;
		height: auto;
		background-size: 200%;
		text-align: center;
		line-height: 200%;
		border-radius: 5px;
		font-size: 15px;
		outline: none;
		border: none;
		background-color: #808080;
		cursor: pointer;
		text-decoration: none;
		color: #fff;
	}
</style>