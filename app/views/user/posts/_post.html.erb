<div class="user-post">
	<table>
		<tr>
			<%= link_to(post.user) do %>
				<%= attachment_image_tag(post.user, :profile_image, :size =>'60x60', fallback: "avator.svg") %>
			<% end %>
		</tr>
		<th><%= post.user.username %></th>
		<tr><%= link_to post.body, post %></tr>
		<tr><%= post.image_id %></tr>
	</table>
	<table class="fav" style="margin: 0 auto">
		<tr>
			<th><%= render "user/favorites/favorite", post: post %></th>
			<th>コメント数：<%= post.post_comments.count %></th>
		</tr>
	</table>
</div>

<style>
	.fav th{
		padding: 0 10px;
	}
</style>