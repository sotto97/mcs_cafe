<div class="container" style="margin-top: 30px;">
	<div class="row">

		<!-- 左側のページ -->
		<div class="col-xs-7 col-xs-offset-1" style="padding-bottom: 30px;">
			<h3 style="text-align: center">投稿</h3>

			<!-- ユーザーの投稿一覧 -->
			<%= render 'post', post: @post %>

			<!-- コメント一覧 -->
			<%= render 'comment', post: @post %>

			<!-- コメント入力フォーム -->
			<%= render 'comment_form', post: @post %>
		</div>

		<!-- 右側のページのユーザー情報 -->
		<div class="col-xs-3" style="padding-bottom: 30px;">
			<%= render 'user/users/profile', user: @user %>
		</div>

	</div>
</div>
