<div class="container" style="margin-top: 30px;">
	<div class="row">

		<!-- ユーザーの情報 -->
		<div class="col-xs-3" style="padding-bottom: 30px;">
			<%= render 'user/users/profile', user: @user %>
		</div>

		<!-- 右側のページ -->
		<div class="col-xs-9" style="padding-bottom: 30px;">
			<h3 style="text-align: center">投稿</h3>

			<!-- ユーザーの投稿一覧 -->
			<%= render 'post', post: @post %>

			<!-- コメント一覧 -->
			<div class="post-comment">
				<h3 style="text-align: center">コメント一覧</h3>
				<% @post.post_comments.each do |post_comment| %>
					<tr>
						<td><%= post_comment.user.name %></td>
						<td><%= post_comment.comment %></td>
						<td>
							<% if post_comment.user == current_user %>
							<%= link_to "Destroy", book_post_comments_path(post_comment), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{post_comment.id}" %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</div>

			<!-- コメント入力フォーム -->
			<h3 style="text-align: center">コメント入力</h3>
			<div class="new-post-comment">
				<!-- postとpost_commentだから、modelを2つ指定する -->
				<%= form_with(model: [@post, @post_comment], local: true) do |f| %>
					<%= f.text_area :comment, class:"form-control new-post-comment", style:"width: 70%; height:50px;", placeholder:"コメントをここに入力してください" %>
					<%= f.submit :コメントする, class:"btn create-post-comment", style:"color: #fff; font-size: 15px;" %>
				<% end %>
			</div>

		</div>
	</div>
</div>