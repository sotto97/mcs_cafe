<div class="container" style="margin-top: 30px;">
	<div class="row">

		<!-- ユーザーの情報 -->
		<div class="col-xs-3" style="padding-bottom: 30px;">
			<%= render 'user/users/profile', user: @user %>
		</div>

		<!-- 右側のページ -->
		<div class="col-xs-9" style="padding-bottom: 30px;">
			<h3 style="text-align: center">タイムライン</h3>

			<!-- ユーザーの投稿一覧 -->
			<% @posts.each do |post| %>
				<%= render 'post', post: post %>
			<% end %>

		</div>
	</div>
</div>