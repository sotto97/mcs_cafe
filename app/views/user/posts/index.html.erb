<div class="container" style="margin-top: 30px;">
	<div class="row">

		<!-- 左側のページ -->
		<div class="col-xs-7 col-xs-offset-1" style="padding-bottom: 30px;">
			<h3 style="text-align: center">タイムライン</h3>

			<!-- ユーザーの投稿一覧 -->
			<div id="post">
				<%= render 'post' %>
			</div>
			<!-- もっと見る機能をkaminariで実装 -->
			<div class="more">
				<%= link_to_next_page @posts, 'もっと見る', remote: true, id: 'view_more', class:"btn more-action", style:"color: #fff;" %>
			</div>
		</div>

		<!-- 右側のページのユーザー情報 -->
		<div class="col-xs-3" style="padding-bottom: 30px;">
			<%= render 'user/users/profile', user: @user %>
		</div>

	</div>
</div>

