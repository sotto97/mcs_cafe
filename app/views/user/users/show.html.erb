<div class="container" style="margin-top: 30px;">
	<div class="row">
		<!-- ユーザーの情報 -->
		<div class="col-xs-3" style="padding-bottom: 30px;">
				<table class="profile">
					<tr>
						<%= attachment_image_tag @user, :profile_image, :size =>'100x100', fallback: "avator.svg" %>
					</tr>

					<tr>
						<th><%= @user.username %></th>
					</tr>

					<!-- current_userのみ情報編集できる -->
					<% if @user == current_user %>
						<tr>
							<th><%= link_to "情報編集する", edit_user_path(current_user), class:"btn edit-user", style:"color: #fff; font-size: 15px;" %></th>
							<th></th>
						</tr>
					<% end %>

					<tr>
						<th>フォロー数</th>
						<th></th>
					</tr>

					<tr>
						<th>フォロワー数</th>
						<th></th>
					</tr>

					<tr>
						<th>自己紹介文</th><br>
						<td><%= @user.introduction %></td>
					</tr>

					<tr>
						<th>タグ</th>
						<th></th>
					</tr>
				</table>
		</div>
		<!-- 右側のページ -->
		<div class="col-xs-9" style="padding-bottom: 30px;">
			<!-- 新規投稿フォーム 非同期通信予定 -->
			<!-- current_userのみ情報編集できる -->
			<% if @user == current_user %>
				<div class="new-post">
				<%= form_with(model: @post, local: true, url: posts_path) do |f| %>
					<%= f.text_area :body, class:"form-control new-post", style:"width: 70%; height:50px;", placeholder:"何を共有したいですか？" %>
					<%= f.submit :投稿する, class:"btn create-post", style:"color: #fff; font-size: 15px;" %>
				<% end %>
				</div>
			<% end %>
			<!-- ユーザーの投稿一覧 -->
			<% @posts.each do |post| %>
				<div class="user-post">
					<table>
						<tr><%= attachment_image_tag @user, :profile_image, :size =>'60x60', fallback: "avator.svg" %></tr>
						<th><%= @user.username %></th>
						<tr><%= post.body %></tr>
						<tr><%#= @post.image_id %></tr>
						<tr><%#= post.favorites.conunt %></tr>
						<tr>/コメント数：<%= post.post_comments.count %></tr>
					</table>
				</div>
			<% end %>
		</div>
	</div>
</div>

<style>
	.create-post{
	  width: 10%;
	  height: 40px;
	  background-size: 200%;
	  display: block;
	  text-align: center;
	  line-height: 200%;
	  border-radius: 10px;
	  outline: none;
	  border: none;
	  background-color: #32be8f;
	  cursor: pointer;
	  text-decoration: none;
	}

	.profile tr{
		display: block;
		padding-top: 10px;
	}

	.edit-user{
	  width: 100%;
	  height: 40px;
	  background-size: 200%;
	  display: block;
	  text-align: center;
	  line-height: 200%;
	  border-radius: 10px;
	  outline: none;
	  border: none;
	  background-color: #32be8f;
	  cursor: pointer;
	  text-decoration: none;
	}

	.user-post{
		border-bottom: 1px solid grey;
		margin-top: 30px;
		padding-bottom: 20px;
	}
</style>