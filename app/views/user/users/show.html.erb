<div class="container" style="margin-top: 30px;">
	<div class="row">

		<!-- 左側のページ -->
		<div class="col-xs-7 col-xs-offset-1" style="padding-bottom: 30px;">
			<!-- 新規投稿フォーム 非同期通信済 -->
			<div class="post-form_<%= @post %>">
				<%= render partial: 'new_post', locals: {post: @post} %>
			</div>

			<div id="post">
				<%= render 'user/posts/post' %>
			</div>
			<!-- もっと見る機能をkaminariで実装 -->
			<div class="more">
				<%= link_to_next_page @posts, 'もっと見る', remote: true, id: 'view_more', class:"btn more-action", style:"color: #fff;" %>
			</div>
		</div>

		<!-- 右側のページのユーザー情報 -->
		<div class="col-xs-3" style="padding-bottom: 30px;">
			<%= render 'profile', user: @user %>
		</div>
		<!-- current_userのみ情報編集できる -->

	</div>
</div>