<div class="container" style="margin: 30px; padding-bottom: 30px; text-align: center;">
	<div class="row">

	  <%= form_for(@user, url: user_path, method: :put) do |f| %>
	  	<!-- 左側の記述 -->
			<div class="col-xs-8 col-xs-offset-2">
				<div class="row">
	        <div class="field-image">
	          <%= attachment_image_tag @user, :profile_image, :size =>'100x100', fallback: "avator.svg", class: "img-circle" %>
						<%= f.attachment_field :profile_image, class: "user_image" %>
	        </div>
	        <div class="row">
						<div class="col-xs-6">
			        <div class="field">
			          <%= f.label :メールアドレス %><br />
			          <%= f.email_field :email, class: "edit" %>
			        </div>

			        <div class="field">
			          <%= f.label :職業 %><br />
			          <%= f.text_field :job, class: "edit" %>
			        </div>

			        <div class="field">
			          <%= f.label :年齢 %><br />
			          <%= f.text_field :age, class: "edit" %>
			        </div>
						</div>
						<!-- 右側の記述 -->
						<div class="col-xs-6" style="height: auto; margin-top:;">
			        <div class="field">
			          <%= f.label :ユーザー名 %><br />
			          <%= f.text_field :username, class: "edit" %>
			        </div>

			        <div class="field">
			          <%= f.label :居住地域 %><br />
			          <%= f.text_field :address, class: "edit" %>
			        </div>

			        <div class="field">
			          <%= f.label :自己紹介文 %><br />
			          <%= f.text_area :introduction, class: "form-control introduction" %>
			        </div>
						</div>
					</div>
	        <div class="field">
	        	<%= link_to "戻る", user_path(current_user.id), class:"btn back-user", style:"color: #fff; font-size: 15px;"  %>
	        	<%= f.submit "更新する", class:"btn update-user", style:"color: #fff; font-size: 15px;" %>
		        <%= link_to "退会", users_hide_path(current_user), method: :put, "data-confirm" => "本当に退会しますか？", class:"btn withdraw-user", style:"color: #fff; font-size: 15px;" %>
	        	<%#= f.submit "退会する", class:"btn withdraw-user", style:"color: #fff; font-size: 15px;" %>
	        </div>
				</div>
			</div>
		<% end %>

	</div>
</div>