<ul class="profile">
	<li>
		<%= attachment_image_tag user, :profile_image, :size =>'100x100', fallback: "avator.svg" %>
	</li>

	<li><h4><strong><%= user.username %></strong></h4></li>

	<!-- current_userのみ情報編集できる -->
	<% if user == current_user %>
		<li>
			<%= link_to "情報編集する", edit_user_path(current_user), class:"btn edit-user", style:"color: #fff; font-size: 15px;" %>
		</li>
	<% end %>
	<!-- ここまで -->

	<li>
		<div class="follow">
		    <%= link_to following_user_path(user.id) do %>
	        <h5 style="color: black;">フォロー数：<%= user.following.count %>人</h5>
		    <% end %>
		</div>
		<div class="follower">
		    <%= link_to followers_user_path(user.id) do %>
	        <h5 style="color: black;">フォロワー数：<%= user.followers.count %>人</h5>
		    <% end %>
		</div>

		<%= render "user/relationships/follow", user: user %>
	</li>

	<li>
		<h4>自己紹介文</h4>
		<p style="text-align: left;"><%= user.introduction %></p>
	</li>

	<li>
		<h4>タグ</h4>
		<p><%#= ここに保有スキルを記載 %></p>
	</li>
</ul>