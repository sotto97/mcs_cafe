<div class="container" style="margin-top: 30px;">
<h3 style="text-align: center; margin-bottom: 20px;">違反者通報</h3>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<!-- 違反者通報画面 -->
				<div class="new-notice">
					<%= form_with(model: @notice, local: true, url: user_notices_path) do |f| %>
					  <%= hidden_field :user_id, @user.id %>
						<%= f.text_area :body, class:"form-control new-notice", style:"width: 100%; height:100px; margin-bottom: 20px; ", placeholder:"何がありましたか？" %>
	        	<%#= link_to "戻る", user_path(user.id), class:"btn back-user", style:"color: #fff; font-size: 15px;"  %>
						<%= f.submit :このユーザーを通報する, class:"btn create-notice", style:"color: #fff; font-size: 15px; margin-bottom: 20px;" %>
					<% end %>
				</div>
			<!-- ここまで -->
		</div>
	</div>
</div>