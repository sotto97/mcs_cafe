<div class="container" style="text-align: center">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4" style="position: relative; height: 80vh;">
      <div class="admin-login-form" style="background-color: #fff;">
      <h2>管理者 Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <%# if devise_mapping.rememberable? %>
          <!-- <div class="field"> -->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <!-- </div> -->
        <%# end %>

        <div class="actions">
          <%= f.submit "Log in", class:"btn admin-login", style:"color: #fff; font-size: 15px;" %>
        </div>
      <% end %>

      <%#= render "admins/shared/links" %>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    min-height: 100vh;
    background-image: linear-gradient(120deg,#2E3892,#222);
  }
</style>