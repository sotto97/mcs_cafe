<!DOCTYPE html>
<html>
  <head>
    <title>McsCafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial=scale=1">
    <script src="https://kit.fontawesome.com/a55a36e434.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Spartan:500&display=swap" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class= "navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- 以下の記述はLOGO.imgに変更 -->
          <%=link_to "MCS Cafe", root_path, class:"navbar-brand"%>
        </div>
        <div class="collapse navbar-collapse" id="navbarEexample">
          <!-- ログインしていないvisitor用のnav pathは後ほど.jsの記述に変更 -->
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-right header-nav">
              <li class="nav-item"><%= link_to "会員情報", users_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "タイムライン", posts_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "カレンダー", users_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "チャット", users_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "お問い合わせ", new_contact_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, class:"nav-link", method: :delete %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right header-nav">
              <li class="nav-item"><%= link_to "About", about_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "ニュース", about_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "メニュー", about_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "場所", about_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "お問い合わせ", new_contact_path, class:"nav-link" %></li>
              <li class="nav-item"><%= link_to "ログイン", new_user_session_path, class:"nav-link" %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
  <footer>
    <p>© 2020 Yusuke Shimomura All Rights Reserved</p>
  </footer>
</html>
