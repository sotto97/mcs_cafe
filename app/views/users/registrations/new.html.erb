<div class="container" style="text-align: center;">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-4" style="position: relative; height: 100vh;">
      <div class="check-login" style="background-color: #fff;">
        <div class="actions">
          <h2>If you already User</h2>
          <p>click this buttton</p>
          <i class="fas fa-angle-double-down"></i>
          <%= link_to "Log in", new_user_session_path, class:"btn login", style:"color: #fff; font-size: 15px;"%>
        </div>
      </div>
    </div>
    <div class="col-xs-offset-2 col-xs-4" style="background-color: #fff;">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field" style="display: flex;">
        <div class="left" style="width: 50%" >
          <%= f.label :名前（姓） %><br />
          <%= f.text_field :last_name, autofocus: true, placeholder:'山田' %>
        </div>

        <div class="right" style="width: 50%">
          <%= f.label :名前（名） %><br />
          <%= f.text_field :first_name, autofocus: true, placeholder:'太郎' %>
        </div>
      </div>

      <div class="field" style="display: flex;">
        <div class="left" style="width: 50%">
          <%= f.label :名前（セイ） %><br />
          <%= f.text_field :last_name_kana, autofocus: true, placeholder:'ヤマダ' %>
        </div>

        <div class="right" style="width: 50%">
          <%= f.label :名前（メイ） %><br />
          <%= f.text_field :first_name_kana, autofocus: true, placeholder:'タロウ' %>
        </div>
      </div>

      <div class="field">
        <%= f.label :ユーザー名 %><br />
        <i class="fas fa-user"></i>
        <%= f.text_field :username, autofocus: true, placeholder:'ヤマロウ' %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <i class="fas fa-envelope"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'example@gmail.com' %>
      </div>

      <div class="field">
        <%= f.label :パスワード（6文字以上） %><br />
        <i class="fas fa-lock"></i>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <i class="fas fa-lock"></i>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions" style="padding: 15px 0;">
        <%= f.submit "Sign up", class:"btn signup", style:"color: #fff; font-size: 15px;" %>
      </div>
    <% end %>

    <%#= render "users/shared/links" %>
    </div>
  </div>
</div>

<style>
  body {
    min-height: 100vh;
    background-image: linear-gradient(120deg,#2E3892,#32be8f);
  }
</style>